<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="njnu.edu.back.dao.ProjectMapper">
    <insert id="addProject" parameterType="njnu.edu.back.proj.dto.AddProject">
        insert into projects values(default, #{projectName}, #{creator}, #{description}, #{createTime}, #{result});
    </insert>

    <select id="getResult" resultType="java.lang.String">
        select result from projects where id = #{id}
    </select>
    
    <select id="getProjectId" resultType="java.util.HashMap">
        select id, project_name as projectName, description as des from projects where creator = #{email} order by id
    </select>

    <update id="setResult">
        update projects set result = #{result} where id = #{id};
    </update>
</mapper>