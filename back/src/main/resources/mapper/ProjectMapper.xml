<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="njnu.edu.back.dao.ProjectMapper">

    <insert id="addProject" parameterType="njnu.edu.back.proj.dto.AddProject">
        insert into projects values(default, #{projectName}, #{creator}, #{description}, #{createTime}, #{result});
    </insert>

    <select id="getResult" resultType="java.lang.String">
        select result from projects where id = #{id}
    </select>
    
    <select id="getProjectId" resultType="java.util.HashMap">
        select id, project_name as "projectName", description as des, create_time as "createTime" from projects where creator = #{email} order by create_time;
    </select>

    <update id="setResult">
        update projects set result = #{result} where id = #{id};
    </update>

    <select id="getResultByEmailAndProjectName" resultType="java.lang.String">
        select result from projects where creator = #{email} and project_Name = #{projectName};
    </select>

    <select id="getProjects" resultType="java.util.HashMap">
        select * from projects;
    </select>

    <select id="findProjectById" resultType="java.util.HashMap">
        select * from projects where id = #{id};
    </select>

</mapper>